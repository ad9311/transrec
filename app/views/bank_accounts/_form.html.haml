= form_for @bank_account do |f|
  - if @bank_account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bank_account.errors.count, "error")} prohibited this bank_account from being saved:"
      %ul
        - @bank_account.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :bank
    = f.text_field :bank
  .field
    = f.label :last_four
    = f.text_field :last_four
  .field
    = f.label :sort
    .radio-buttons
      = f.radio_button :sort, "savings"
      = f.label :sort, "Savings"
      = f.radio_button :sort, "checking"
      = f.label :sort, "Checking"
  .actions
    = f.submit 'Save'