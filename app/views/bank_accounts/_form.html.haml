.bank-account.card.mb-4
  .card-header
    %h2 New Bank Accout
  .card-body
    = form_for @bank_account do |f|
      .field.mb-3
        = f.label :bank, class: "form-label"
        = f.text_field :bank, class: "form-control"
      .field.mb-3
        = f.label :last_four, class: "form-label"
        = f.text_field :last_four, class: "form-control"
      .field.mb-3
        .radio-buttons
          .group
            = f.radio_button :sort, "savings", class: "form-check-input", checked: true
            = f.label :sort, "Savings", class: "form-label"
          .group
            = f.radio_button :sort, "checking", class: "form-check-input"
            = f.label :sort, "Checking", class: "form-label"
      .actions
        = link_to "Close", root_path, "data-turbo-frame": "_top", class: "btn btn-danger"
        = f.submit "Add", class: "btn btn-primary float-end"